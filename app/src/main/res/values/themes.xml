<resources xmlns:tools="http://schemas.android.com/tools">
  <!-- Base application theme. -->
  <style name="Theme.TimerClosePanel" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
    <!-- Primary brand color. -->
    <item name="colorPrimary">@color/purple_500</item>
    <item name="colorPrimaryVariant">@color/purple_700</item>
    <item name="colorOnPrimary">@color/white</item>
    <!-- Secondary brand color. -->
    <item name="colorSecondary">@color/teal_200</item>
    <item name="colorSecondaryVariant">@color/teal_700</item>
    <item name="colorOnSecondary">@color/black</item>
    <!-- Status bar color. -->
    <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    <!-- Customize your theme here. -->
  </style>

  <!-- 定时关闭进度 -->
  <style name="TimerSeekBar">
    <item name="android:duplicateParentState">true</item>
    <item name="android:max">100</item>
    <item name="android:maxHeight">2dp</item>
    <item name="android:minHeight">2dp</item>
    <item name="android:paddingStart">0dp</item>
    <item name="android:paddingLeft">0dp</item>
    <item name="android:paddingEnd">0dp</item>
    <item name="android:paddingRight">0dp</item>
    <item name="android:progress">0</item>
    <item name="android:progressDrawable">@drawable/timer_close_seek_bar_bg_close</item>
    <item name="android:thumb">@drawable/timer_close_seek_bar_thumb_close</item>
    <item name="android:thumbOffset">0dp</item>
  </style>
</resources>